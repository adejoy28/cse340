<!-- Display Title -->
<h1><%= title %></h1>

<!-- Flash Messages -->
<% if (messages.notice) { %>
<div class="notice">
    <%= messages.notice %>
</div>
<% } %>

<!-- Validation Errors -->
<% if (errors) { %>
<div class="notice">
    <ul>
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
</div>
<% } %>

<!-- Account Update Form -->
<section class="account-form-section">
    <h2>Update Account Information</h2>
    <form action="/account/update/" method="post" class="account-form" id="accountUpdateForm">
        <!-- Hidden account ID field -->
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <!-- First Name Field -->
        <label for="account_firstname">First Name *</label>
        <input type="text" id="account_firstname" name="account_firstname"
            value="<%= typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>"
            required minlength="2" maxlength="50" pattern="[A-Za-z\s-]+"
            title="First name can only contain letters, spaces, and hyphens">

        <!-- Last Name Field -->
        <label for="account_lastname">Last Name *</label>
        <input type="text" id="account_lastname" name="account_lastname"
            value="<%= typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>"
            required minlength="2" maxlength="50" pattern="[A-Za-z\s-]+"
            title="Last name can only contain letters, spaces, and hyphens">

        <!-- Email Field -->
        <label for="account_email">Email Address *</label>
        <input type="email" id="account_email" name="account_email"
            value="<%= typeof account_email !== 'undefined' ? account_email : accountData.account_email %>" required
            maxlength="100" title="Please enter a valid email address">

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Update Account Information</button>
    </form>
</section>

<!-- Change Password Form -->
<section class="account-form-section">
    <h2>Change Password</h2>
    <div class="password-info">
        <p><strong>Note:</strong> Entering a new password will replace your current password.</p>
        <p>Your password must be at least 12 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character.</p>
    </div>

    <form action="/account/change-password/" method="post" class="account-form" id="passwordChangeForm">
        <!-- Hidden account ID field -->
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <!-- New Password Field -->
        <label for="new_password">New Password *</label>
        <input type="password" id="new_password" name="new_password" required minlength="12"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{12,}"
            title="Password must be at least 12 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character">

        <label for="confirm_password">Confirm New Password *</label>
        <input type="password" id="confirm_password" name="confirm_password" required minlength="12"
            title="Re-enter your new password to confirm">

        <button type="submit" class="btn btn-secondary">Change Password</button>
    </form>
</section>
