<!-- Display Title -->
<h1><%= title %></h1>

<!-- Flash Messages -->
<% if (messages.notice) { %>
<div class="notice">
    <%= messages.notice %>
</div>
<% } %>

<!-- Welcome Message -->
<h2>Welcome <%= accountData.account_firstname %></h2>
<em>The account type is: <%= accountData.account_type %></em>

<!-- Update Account Link (for all account types) -->
<p><a href="/account/update/<%= accountData.account_id %>" title="Update account information">Update Account Information</a></p>

<!-- Inventory Management Section (for Employee/Admin only) -->
<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
<h3>Inventory Management</h3>
<p><a href="/inv/" title="Access Inventory Management">Manage Inventory</a></p>
<% } %>